@import "https://fonts.googleapis.com/css2?family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap";.section-title{position:relative;z-index:3;text-align:center;font-size:36px;font-weight:700;text-transform:uppercase;padding-top:2rem}section.projects{background:#2b2735}section.with-ellipse{margin-top:15px}section.with-ellipse::before{position:absolute;content:'';top:-15px;width:100%;height:30px;background:inherit;clip-path:ellipse()}section.hero{padding-top:1rem;padding-bottom:3rem;text-align:center}section.hero .profile-img{margin:0 auto;width:200px;height:200px;overflow:hidden;border-radius:.7rem}section.hero .profile-img img{width:100%;height:100%;object-fit:cover}section.hero h1{font-size:60px;font-weight:700;padding-top:1rem}section.hero .buttons{display:flex;flex-direction:column;padding-top:2rem;max-width:300px;margin:0 auto;gap:1rem}.project-grid{padding:2rem;display:grid;gap:1rem;grid-template-columns:repeat(auto-fit,minmax(400px,1fr))}.project-card{background:#0a0b13;border:2px solid #fff;border-radius:.5rem;padding:1rem;text-align:center}.project-card .img{width:100%;height:auto;border-radius:.5rem}.project-card .title{padding-top:.5rem;font-weight:700;font-size:1.75rem}.project-card .description{padding-top:.5rem}*{padding:0;margin:0;box-sizing:border-box}body{background:#0a0b13;color:#fff;font-family:ubuntu,sans-serif}section{position:relative}.btn{text-decoration:none;border-radius:10px;display:inline-block;border:none;outline:none;font-weight:700;font-size:16px;padding:14px 24px 16px;cursor:pointer;transition:transform 100ms ease-out}.btn.main{background:#fff;color:#0a0b13}.btn.main.outline{background:0 0;color:#fff;border:2px solid #fff}.btn:hover{transform:translate(0,-0.3rem)}.bg-primary{background:#0a0b13}.bg-secondary{background:#2b2735}